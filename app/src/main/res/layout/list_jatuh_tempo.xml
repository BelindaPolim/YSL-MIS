<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@drawable/white_rectangle_background">

    <TextView
        android:id="@+id/nomor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/didact_gothic"
        android:text="Nomor Fkt : "
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentStart="true"
        android:padding="5dp"/>
    <TextView
        android:id="@+id/jtNomor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/didact_gothic"
        android:textSize="16sp"
        android:textColor="@color/itemuda"
        android:layout_toEndOf="@+id/nomor"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/didact_gothic"
        android:text="Tanggal Fkt : "
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:padding="5dp"
        android:layout_below="@id/jtNomor"/>
    <TextView
        android:id="@+id/jtTanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/didact_gothic"
        android:textSize="16sp"
        android:textColor="@color/itemuda"
        android:padding="5dp"
        android:layout_below="@id/jtNomor"
        android:layout_toEndOf="@id/tanggal"/>

    <TextView
        android:id="@+id/jatuhTempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/didact_gothic"
        android:text="Jatuh Tempo : "
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:padding="5dp"
        android:layout_below="@+id/jtNomor"
        android:layout_toStartOf="@+id/jtJatuhTempo"/>

    <TextView
        android:id="@+id/jtJatuhTempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/didact_gothic"
        android:textSize="16sp"
        android:textColor="@color/itemuda"
        android:padding="5dp"
        android:layout_below="@+id/jtNomor"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/nilai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/didact_gothic"
        android:text="Nilai : "
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/jtJatuhTempo"
        android:layout_toStartOf="@id/jtNilai"
        android:padding="5dp"/>
    <TextView
        android:id="@+id/jtNilai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/didact_gothic"
        android:textSize="16sp"
        android:textColor="@color/itemuda"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/jtJatuhTempo"
        android:padding="5dp" />
</RelativeLayout>