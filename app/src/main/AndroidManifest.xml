<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.com.ervsoftware.ysl">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name="id.com.ervsoftware.ysl.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name="id.com.ervsoftware.ysl.ProfileDetailActivity"
            android:theme="@style/CustomDialog"/>
        <activity android:name="id.com.ervsoftware.ysl.ProfileCustActivity" />
        <activity android:name="id.com.ervsoftware.ysl.ProfileSuppActivity" />
        <activity
            android:name="id.com.ervsoftware.ysl.MainMenuActivity"
            android:label="@string/title_activity_main_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="id.com.ervsoftware.ysl.DatePickerActivity"
            android:theme="@style/CustomDialog" />
        <activity android:name="id.com.ervsoftware.ysl.InformasiTambahan" />
        <activity
            android:name="id.com.ervsoftware.ysl.ChartPenjualan"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="landscape" />
        <activity
            android:name="id.com.ervsoftware.ysl.ChartPembelian"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="landscape" />
        <activity android:name="id.com.ervsoftware.ysl.ForgotEmailActivity" />
        <activity
            android:name="id.com.ervsoftware.ysl.HutangActivity"
            android:label="Hutang"
            android:parentActivityName="id.com.ervsoftware.ysl.MainMenuActivity" />
        <activity
            android:name="id.com.ervsoftware.ysl.PiutangActivity"
            android:label="Piutang"
            android:parentActivityName="id.com.ervsoftware.ysl.MainMenuActivity" />
        <activity
            android:name="id.com.ervsoftware.ysl.PembelianActivity"
            android:label="Pembelian"
            android:parentActivityName="id.com.ervsoftware.ysl.MainMenuActivity" />
        <activity
            android:name="id.com.ervsoftware.ysl.PenjualanActivity"
            android:label="Penjualan"
            android:parentActivityName="id.com.ervsoftware.ysl.MainMenuActivity" />
        <activity
            android:name="id.com.ervsoftware.ysl.LoginActivity"
            android:noHistory="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>